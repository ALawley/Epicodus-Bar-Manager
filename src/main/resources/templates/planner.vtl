    <label for="type1">Type:</label>
    <select name="type1" id="type1">
      <!-- <option value="0" id="blank1">Select Type:</option> -->
      <option value="0" id="blank1"> -- select an option -- </option>
      #foreach($type in $types)
      <option value="$type.getId()" id="ing1type$type.getId()">$type.getType()</option>
      #end
    </select>
    <label for="info1">Info:</label>
    <input type="text" class="input-sm" name="info1" id="info1">
  </div>

