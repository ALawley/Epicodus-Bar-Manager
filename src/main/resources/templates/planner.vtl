<div class="container">
<h1>Planner</h1>
<div id="planner-recipe" class="well">
  <h2>$recipe.getName()</h2>
  <h2>Created By: $recipe.getCreator()</h2>
    <div class="row">
      <div class="col-sm-6">
        <h3>$recipe.getNotes()</h3>
        <h3>Duration: $recipe.getPrepTime()</h3>
      </div>
      <div class="col-sm-6">
        <h4>Ingredients</h4>
        <ul>
        #foreach ($item in $recipe.getIngredients())
        <li>$formatter.format($item.getAmount()) oz - $item.getTypeName() - $item.getInfo()</li>
        #end
        </ul>
        <h4>Directions</h4>
        <h5>$recipe.getDirections()</h5>
        #if ($update)
        #else
      </div>
      <a href="/planner/$recipe.getId()/update" id="btn-style" class="btn btn-default btn-sm">Edit Recipe</a>
      #end
    </div>
</div>

#if ($update)
<br>
<br>
<form action="/planner/$recipe.getId()/update" method="post">
  <div class="form-group top-form">
    <label for="name">Name:</label>
    <input id="name" name="name" type="text" class="input-sm" required value=$recipe.getName()>
    <label for="notes">Notes:</label>
    <input id="notes" name="notes" type="text" class="input-sm" value=$recipe.getNotes()>
    <label for="creator">Created By:</label>
    <input id="creator" name="creator" type="text" class="input-sm" value=$recipe.getCreator()>
    <label for="preptime">Prep Time:</label>
