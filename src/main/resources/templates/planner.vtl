#else
#if ($recipe.getIngredients().size() == 0)
<h2>Please add some ingredients to your drink.</h2>
#else
<div id="pick-poison" class="well">
  <h2>Pick Your Poison</h2>
  <div class="content">
    <form action="$recipe.getId()/make" method="get">
      #foreach ($ingredient in $recipe.getIngredients())
      <label>$formatter.format($ingredient.getAmount()) oz. $ingredient.getTypeName() - $ingredient.getInfo()</label>
      <select type="text" name="ingredientStated" id="choose$ingredient.getId()">
        #foreach($item in $ingredient.getType().getAllOf())
        <option value="$item.getId()" id="$ingredient.getId()use$item.getId()">$item.getName()</option>
        #end
      </select>
      <br>
      #end
      <button class="btn btn-block btn-style" type="submit" id="makedrink">Make Drink</button>
    </form>
  </div>
